@using MsSqlServerDatabaseTablesGraph.WebApp.Properties
@{
    Layout = null;
    ViewBag.Title = "HTTP 404";
    var aspxErrorPath = Request[ "aspxerrorpath" ];
    var missingUrl    = !aspxErrorPath.IsNullOrWhiteSpace() ? aspxErrorPath : Request.RawUrl;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@this.GetTitle()</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.ico?v@(HtmlConsts.JavascriptResourceVersion)" />
    <link rel="stylesheet" type="text/css" href="~/Content/_Layout.css?v@(HtmlConsts.JavascriptResourceVersion)" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <noscript><div id="noscript">@Resource.NO_SCRIPT_CAPTION</div></noscript>
    <!--[if lt IE 11 ]> <div id="ie-less-11">@Resource.IE_LESS_11_CAPTION</div> <![endif]-->

    <div id="logo_header" class="vertical-text">
        <div id="logo_header_subheader">
            <img src="~/Images/favicon.ico?v@(HtmlConsts.JavascriptResourceVersion)" />
            <h3>@MsSqlServerDatabaseTablesGraph.WebApp.Properties.Resource.LOGO_HEADER</h3>
        </div>
    </div>

    <div style="width: 50%; margin: auto; padding: 25px; text-align: center">
        <div style="font-size: large">
            <span style="color: red; font-weight: bold;">HTTP 404</span>            
            <span> - страница не найдена</span>            
        </div>
        <div style="height: 10px;"></div>
        <div>
            <span> URL: <span style="text-decoration: underline; background-color: silver">@missingUrl</span></span>
        </div>
        <div style="height: 30px;"></div>
        <div>
            <a href="@Url.Content("~/")">На главную станицу</a>
        </div>
    </div>
</body>
</html>
